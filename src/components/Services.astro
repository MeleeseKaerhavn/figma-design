---
 // @ts-nocheck
import servicesData from "@data/services.json";
import "@styles/global.css";
---

<section class="services">
  <ul class="services-list">
    {servicesData.services.map(s => (
      <li class="card">
        <h3>{s.title}</h3>
        <p>{s.description}</p>
        <a class="card-cta" href="#0">{s.buttonText}</a>
      </li>
    ))}
  </ul>
</section>

<style>
.services{
  position: absolute;            
  inset-inline: 0;               
  inset-block-start: calc(100% - 5rem); 
  z-index: 2;
  padding-inline: clamp(16px, 4vw, 32px); 
  container: services / inline-size;
  
}

.services-list{
  max-width: 1000px;
  margin: 0 auto;
  padding: 0;
  list-style: none;

  display: grid;
  grid-template-columns: repeat(3, minmax(0,1fr));
  gap: clamp(16px, 2vw, 24px);
}

.card{
   border-radius: 18px; 
   padding: 2rem; 
   color: var(--color-secondary-02); 
   background: var(--color-secondary-03);
   box-shadow: 0 12px 30px rgba(0,0,0,.25); 
   border: 2px solid rgba(255, 255, 255, 0.20);
   font-family: var(--font-lato);
   display: flex;
   flex-direction: column;
   gap: 1rem;


  }

  h3{
    font-size: var(--fs-body);
    font-weight: 600;
  }

  .card p{
    font-size: smaller;
  }


  .card-cta{
  display: inline-flex;
  align-items: center;
  padding: .9rem 1.25rem;
  border-radius: 999px;
  background: #111;                     /* the darker pill on cards */
  color: var(--color-secondary-02);
  text-decoration: none;
  font-weight: 700;
  width: max-content;
  
  *{
  cursor: pointer;
  }
}

/* container queries */
@container services (width < 1200px){ 
  .services{ inset-block-start: calc(100% - 0.2rem); }
  .services-list{ max-width: 800px; } }
@container services (width < 700px) { .services-list{ grid-template-columns: 1fr; max-width: 400px;} }
</style>



