---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
import patternUrl from "../icons/pattern.svg?url";
import "@styles/global.css";
---

<section class="hero" style={`--pattern-url: url('${patternUrl}')`}>
  <div class="hero-content">
    <h1>Empowering Your  <br> Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve

      sustainable success.
    </p>
    <a href="#0">Book a Meeting</a>
  </div>
  <Image src={CEOImage} alt="CEO" class="hero-img"/>

  <Services />
</section>

<style>
  /* Styles her */
.hero{
  container: hero / inline-size;       
  position: relative;
  display: grid;
  grid-template-columns:  1fr 1fr;  
  align-items: center;
  /* min-height: clamp(560px,70vh,760px); */
  padding: 0;
  color: var(--color-secondary-02);
  background: var(--color-primary-03);

  isolation: isolate; /* læs op på dette */

  h1{
    font-size: var(--fs-h1);
    text-wrap: nowrap ;
  }

  p{
    font-size: var(--fs-body);
    font-weight: 300;
    
  }
}


.hero::before{
  content:"";
  position:absolute; inset: 7rem auto auto -1rem;
  width:210px; height:270px;
  background-image: var(--pattern-url);
  background-repeat: no-repeat;
  background-size:contain;
  z-index:-1;
}

/* content + image placement */
.hero-content{ 
  grid-column:1; 
  font-family: var(--font-lato); 
  display: flex; 
  flex-direction: column; 
  gap: 2rem; 
  align-items: flex-start;        /* ✨ stop children from stretching */
  padding-left: 15rem;            /* instead of margins on h1/p */
}
.hero-img{ grid-column:2; width:100%; height:100%; object-fit:cover;}

/* pull the Services cards up to overlap the hero bottom */
/* .hero > :last-child{ margin-top:-4rem; position:relative; z-index:2; } */

a{
  align-items: center;
  justify-self: center;
  padding: .5rem .8rem;
  border-radius: 90px;
  background: var(--color-secondary-01);
  color: var(--color-primary-03);
  text-decoration: none;
  font-weight: 600;

}
/* ========== Container queries ========== */
/* @container hero (width < 900px){ */
  /* keep the 2-col grid but stack children by spanning both columns */
  /* .hero-img{ grid-column:1 / -1; height:40vh; min-height:260px; order:1; } */
  /* .hero-content{ grid-column:1 / -1; order:2; } */
/* } */

/* container query: ease the left offset on smaller hero widths */
@container hero (width < 1200px){
  .hero-content{
    padding-left: clamp(1.5rem, 6cqi, 8rem);
    /* cqi = container query inline size unit */
  }
}

/* optional: on very small containers, stack image above text */
@container hero (width < 900px){
  .hero-img{ grid-column: 1 / -1; block-size: 40vh; min-block-size: 260px; order: 1; }
  .hero-content{ grid-column: 1 / -1; padding-left: 1.5rem; order: 2; }
  
  .hero{ padding-block-end: 8rem; }               /* less room on small */
  .services{ inset-block-start: calc(100% - 3.5rem); }
}









  @layer components {
    .hero {
      background-color: black;
      color: var(--color-secondary-02);
      padding: 2rem;
    }
  }
</style>
